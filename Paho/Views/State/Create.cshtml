@model Paho.Models.State

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@(((Paho.Controllers.StateController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelState"))</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Country -->
        <div class="form-group">
            @Html.LabelFor(model => model.Area.CountryID, (((Paho.Controllers.StateController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelCountry")), htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.DropDownList("CountryID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Area.CountryID, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- AreaID -->
        <div class="form-group">
            @Html.LabelFor(model => model.AreaID, (((Paho.Controllers.StateController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelArea")),
                            htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.DropDownList("AreaID", ViewBag.Areas as SelectList, (((Paho.Controllers.StateController)this.ViewContext.Controller).getMsg("msgSelectLabel")),
                            htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AreaID, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Name -->
        <div class="form-group">
            @Html.LabelFor(model => model.Name, (((Paho.Controllers.StateController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelState")), htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- orig_country -->
        <div class="form-group">
            @Html.LabelFor(model => model.orig_country, htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.orig_country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.orig_country, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Boton: sbmit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-7">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

