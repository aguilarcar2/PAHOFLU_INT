@model Paho.Models.InstitutionConfiguration

<h2>Borrar</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>Esta seguro que desea borrar el registro?</h3>

<div class="form-horizontal" data-bind="with: app.Views.CatalogInstitution">
    <h4>Catalogo - Institucion</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <div class="form-group" id="div-father">
        <label class="col-md-2">Institucion Desde</label>
        <div class="col-md-10">
            @Html.DropDownList("InstitutionFromID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" id="div-father">
        <label class="col-md-2">Institucion Hacia</label>
        <div class="col-md-10">
            @Html.DropDownList("InstitutionToID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" id="div-father">
        <label class="col-md-2">Institucion Padre</label>
        <div class="col-md-10">
            @Html.DropDownList("InstitutionParentID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Priority, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Priority, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Conclusion, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Conclusion, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" class="btn btn-default" /> |
        @Html.ActionLink("Regresar a Listado", "Index")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/catalog-institution-conf")
}
