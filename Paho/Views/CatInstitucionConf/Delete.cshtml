@model Paho.Models.InstitutionConfiguration

<h2>@(Paho.Controllers.CatVirusTypeController.SgetMessage("msgViewCatPopulation_Borrar", ViewBag.UsrCtry, ViewBag.UsrCtryLang))</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h3>@(Paho.Controllers.CatVirusTypeController.SgetMessage("msgDeleteRecord", ViewBag.UsrCtry, ViewBag.UsrCtryLang))?</h3>

<div class="form-horizontal" data-bind="with: app.Views.CatalogInstitution">
    <h4>@(Paho.Controllers.ResourcesM.SgetMessage("msgCatalog", ViewBag.UsrCtry, ViewBag.UsrCtryLang)) - @(Paho.Controllers.ResourcesM.SgetMessage("msgInstitution", ViewBag.UsrCtry, ViewBag.UsrCtryLang))</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <div class="form-group" id="div-father">
        <label class="col-md-2">@(Paho.Controllers.ResourcesM.SgetMessage("msgInstitutionFrom", ViewBag.UsrCtry, ViewBag.UsrCtryLang)):</label>
        <div class="col-md-7">
            @Html.DropDownList("InstitutionFromID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" id="div-father">
        <label class="col-md-2">@(Paho.Controllers.ResourcesM.SgetMessage("msgInstitutionToward", ViewBag.UsrCtry, ViewBag.UsrCtryLang)):</label>
        <div class="col-md-7">
            @Html.DropDownList("InstitutionToID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" id="div-father">
        <label class="col-md-2">@(Paho.Controllers.ResourcesM.SgetMessage("msgFatherInstitution", ViewBag.UsrCtry, ViewBag.UsrCtryLang)):</label>
        <div class="col-md-7">
            @Html.DropDownList("InstitutionParentID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Priority, ((string)Paho.Controllers.ResourcesM.SgetMessage("msgFlow", ViewBag.UsrCtry, ViewBag.UsrCtryLang)) + ":", htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-7">
            @Html.EditorFor(model => model.Priority, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Conclusion, htmlAttributes: new { @class = "col-md-2" })
        <div class="col-md-7">
            @Html.EditorFor(model => model.Conclusion, ((string)Paho.Controllers.ResourcesM.SgetMessage("viewHome_msgConclusion", ViewBag.UsrCtry, ViewBag.UsrCtryLang)) + ":", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group vertical-align">
        @Html.LabelFor(model => model.OpenAlways, ((string)Paho.Controllers.ResourcesM.SgetMessage("msgOpenAlways", ViewBag.UsrCtry, ViewBag.UsrCtryLang)) + ":", htmlAttributes: new { @class = "col-md-1_5 text_right" })
        <div class="col-md-7">
            @Html.EditorFor(model => model.OpenAlways, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value=@(Paho.Controllers.CatVirusTypeController.SgetMessage("msgViewCatPopulation_Borrar", ViewBag.UsrCtry, ViewBag.UsrCtryLang)) class="btn btn-default" /> |
        @Html.ActionLink((string)Paho.Controllers.ResourcesM.SgetMessage("msgReturnToList", ViewBag.UsrCtry, ViewBag.UsrCtryLang), "Index", "CatInstitucionConf", new { }, null)
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/catalog-institution-conf")
}

<script type="text/javascript">
    //***************************************
    $('a#MaintenanceM').addClass("active");        //#### CAFQ: 180806
    //***************************************
</script>  
