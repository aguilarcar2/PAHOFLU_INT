                            htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.DropDownList("StateID", new SelectList(" "), (((Paho.Controllers.ColonyController)this.ViewContext.Controller).getMsg("msgSelectLabel")),
                            htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Hamlet.Neighborhood.StateID, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- NeighborhoodID -->
        <div class="form-group">
            @Html.LabelFor(model => model.Hamlet.NeighborhoodID, (((Paho.Controllers.ColonyController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelNeighborhood")),
                            htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.DropDownList("NeighborhoodID", new SelectList(" "), (((Paho.Controllers.ColonyController)this.ViewContext.Controller).getMsg("msgSelectLabel")),
                            htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Hamlet.NeighborhoodID, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- HamletID -->
        <div class="form-group">
            @Html.LabelFor(model => model.HamletID, (((Paho.Controllers.ColonyController)this.ViewContext.Controller).getMsg("msgCaselistVigTabGeoLabelHamlet")),
                            htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.DropDownList("HamletID", new SelectList(" "), (((Paho.Controllers.ColonyController)this.ViewContext.Controller).getMsg("msgSelectLabel")),
                            htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HamletID, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Barrio/Colonia -->
        <div class="form-group">
            @Html.LabelFor(model => model.Name, labelColony, htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Latitud -->
        <div class="form-group">
            @Html.LabelFor(model => model.Latitude, labelLatitude, htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <!-- Longitud -->
        <div class="form-group">
            @Html.LabelFor(model => model.Longitude, labelLongitude, htmlAttributes: new { @class = "control-label col-md-1_5" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <!-- orig_country -->
        <div class="form-group">
            @Html.LabelFor(model => model.orig_country, htmlAttributes: new { @class = "control-label col-md-1_5" })
