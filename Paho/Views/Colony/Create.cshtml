                @Html.EditorFor(model => model.orig_country, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.orig_country, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Boton: sbmit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-7">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    function limpiarCampos(opcion) {
        if (opcion == "Area") {
            $("#StateID").val("");
            $("#NeighborhoodID").val("");
            $("#HamletID").val("");
        }
        else if (opcion == "State") {
            $("#NeighborhoodID").val("");
            $("#HamletID").val("");
        }
        else if (opcion == "Hamlet") {
            $("#HamletID").val("");
        }

        $("#Name").val("");
        $("#orig_country").val("");
    }

    $(document).ready(function () {
        $("#AreaID").change(function () {       // Area : Departamento
            $.get("/cases/GetStates", { AreaID: $("#AreaID").val() }, function (data) {
                $("#StateID").empty();
                $("#StateID").append("<option value=''>" + "@(labelSelect)" + "</option>")
                $.each(data, function (index, row) {
                    $("#StateID").append("<option value='" + row.Id + "'>" + row.Name + "</option>")
                });

                $("#NeighborhoodID").empty();
                $("#NeighborhoodID").append("<option value=''>" + "@(labelSelect)" + "</option>")
                $("#HamletID").empty();
                $("#HamletID").append("<option value=''>" + "@(labelSelect)" + "</option>")

                limpiarCampos("");
            });
        });

        $("#StateID").change(function () {      //  State : Municipio
            $.get("/cases/GetNeighborhoods", { StateID: $("#StateID").val() }, function (data) {
                $("#NeighborhoodID").empty();
                $("#NeighborhoodID").append("<option value=''>" + "@(labelSelect)" + "</option>")
                $.each(data, function (index, row) {
                    $("#NeighborhoodID").append("<option value='" + row.Id + "'>" + row.Name + "</option>")
                });

                $("#HamletID").empty();
                $("#HamletID").append("<option value=''>" + "@(labelSelect)" + "</option>")

                limpiarCampos("");
            });
        });

        $("#NeighborhoodID").change(function () {      //  Neighborhood : Aldea
            $.get("/cases/GetHamlets", { NeighborhoodID: $("#NeighborhoodID").val() }, function (data) {
                $("#HamletID").empty();
                $("#HamletID").append("<option value=''>" + "@(labelSelect)" + "</option>")
                $.each(data, function (index, row) {
                    $("#HamletID").append("<option value='" + row.Id + "'>" + row.Name + "</option>")
                });

                $("#ColonyID").empty();
                $("#ColonyID").append("<option value=''>" + "@(labelSelect)" + "</option>")

                limpiarCampos("");
            });
        });

        $("#HamletID").change(function () {      //  Neighborhood : Aldea
            limpiarCampos("");
        });
    });

    //***************************************
    $('a#MaintenanceM').addClass("active");        //#### CAFQ: 180806
    //***************************************
</script>
